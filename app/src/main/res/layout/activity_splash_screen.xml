<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient"
    tools:context=".view.SplashScreenActivity">

    <ImageView
        android:id="@+id/ivDrink1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_glass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_drink" />

    <ImageView
        android:id="@+id/ivDrink2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_drink_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivDrink1"
        app:layout_constraintTop_toTopOf="@+id/ivDrink1"
        android:contentDescription="@string/image_drink" />

    <ImageView
        android:id="@+id/ivDrink3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_drink"
        app:layout_constraintBottom_toBottomOf="@+id/ivDrink1"
        app:layout_constraintEnd_toEndOf="@+id/ivDrink2"
        app:layout_constraintTop_toBottomOf="@+id/ivDrink2"
        android:contentDescription="@string/image_cheers" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:gravity="center"
        android:text="@string/cheers"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDrink1" />

</androidx.constraintlayout.widget.ConstraintLayout>